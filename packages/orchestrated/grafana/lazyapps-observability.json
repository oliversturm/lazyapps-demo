{
  "__inputs": [
    {
      "name": "DS_PROMETHEUS",
      "label": "Prometheus",
      "description": "Prometheus data source for metrics",
      "type": "datasource",
      "pluginId": "prometheus"
    },
    {
      "name": "DS_TEMPO",
      "label": "Tempo",
      "description": "Tempo data source for traces",
      "type": "datasource",
      "pluginId": "tempo"
    },
    {
      "name": "DS_LOKI",
      "label": "Loki",
      "description": "Loki data source for logs",
      "type": "datasource",
      "pluginId": "loki"
    }
  ],
  "__requires": [
    { "type": "grafana", "id": "grafana", "name": "Grafana", "version": "11.0.0" },
    { "type": "datasource", "id": "prometheus", "name": "Prometheus" },
    { "type": "datasource", "id": "tempo", "name": "Tempo" },
    { "type": "datasource", "id": "loki", "name": "Loki" },
    { "type": "panel", "id": "stat", "name": "Stat" },
    { "type": "panel", "id": "timeseries", "name": "Time series" },
    { "type": "panel", "id": "piechart", "name": "Pie chart" },
    { "type": "panel", "id": "logs", "name": "Logs" },
    { "type": "panel", "id": "table", "name": "Table" },
    { "type": "panel", "id": "row", "name": "Row" }
  ],
  "description": "Observability dashboard for LazyApps orchestrated services. Custom command/projection metrics, HTTP auto-instrumentation, structured logs via Loki, and traces via Tempo.",
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "id": null,
  "links": [],
  "panels": [
    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "title": "Service Overview",
      "type": "row"
    },
    {
      "type": "stat",
      "title": "Active Services",
      "description": "Number of services reporting metrics",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "count(count by (service_name) (target_info{service_name=~\"$service\"}))",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "yellow", "value": 1 },
              { "color": "green", "value": 4 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      },
      "gridPos": { "h": 4, "w": 4, "x": 0, "y": 1 },
      "id": 1
    },
    {
      "type": "stat",
      "title": "Commands / min",
      "description": "Total command rate across all services",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(lazyapps_commands_total{service_name=~\"$service\"}[$__rate_interval])) * 60",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "blue", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "value"
      },
      "gridPos": { "h": 4, "w": 4, "x": 4, "y": 1 },
      "id": 2
    },
    {
      "type": "stat",
      "title": "Projections / min",
      "description": "Total projection rate across all services",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(lazyapps_projections_total{service_name=~\"$service\"}[$__rate_interval])) * 60",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "purple", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "value"
      },
      "gridPos": { "h": 4, "w": 4, "x": 8, "y": 1 },
      "id": 3
    },
    {
      "type": "stat",
      "title": "HTTP Requests / min",
      "description": "Total HTTP request rate",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(http_server_duration_milliseconds_count{service_name=~\"$service\"}[$__rate_interval])) * 60",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "value"
      },
      "gridPos": { "h": 4, "w": 4, "x": 12, "y": 1 },
      "id": 4
    },
    {
      "type": "stat",
      "title": "HTTP Errors / min",
      "description": "5xx error rate",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(http_server_duration_milliseconds_count{service_name=~\"$service\", http_status_code=~\"5..\"}[$__rate_interval])) * 60 or vector(0)",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "decimals": 1,
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 1 },
              { "color": "red", "value": 10 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "area",
        "textMode": "value"
      },
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 1 },
      "id": 5
    },
    {
      "type": "stat",
      "title": "Avg Response Time",
      "description": "Average HTTP response time across services",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(http_server_duration_milliseconds_sum{service_name=~\"$service\"}[$__rate_interval])) / sum(rate(http_server_duration_milliseconds_count{service_name=~\"$service\"}[$__rate_interval]))",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "thresholds" },
          "unit": "ms",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "yellow", "value": 500 },
              { "color": "red", "value": 2000 }
            ]
          }
        },
        "overrides": []
      },
      "options": {
        "reduceOptions": { "calcs": ["lastNotNull"], "fields": "", "values": false },
        "colorMode": "background",
        "graphMode": "none",
        "textMode": "value"
      },
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 1 },
      "id": 6
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "title": "HTTP Performance",
      "type": "row"
    },
    {
      "type": "timeseries",
      "title": "Request Rate by Service",
      "description": "HTTP requests per second, broken down by service",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(http_server_duration_milliseconds_count{service_name=~\"$service\"}[$__rate_interval])) by (service_name)",
          "legendFormat": "{{service_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none" },
            "axisLabel": "req/s"
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "id": 7
    },
    {
      "type": "timeseries",
      "title": "Response Time Percentiles",
      "description": "HTTP server response time p50, p90, p99",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(http_server_duration_milliseconds_bucket{service_name=~\"$service\"}[$__rate_interval])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.9, sum(rate(http_server_duration_milliseconds_bucket{service_name=~\"$service\"}[$__rate_interval])) by (le))",
          "legendFormat": "p90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(http_server_duration_milliseconds_bucket{service_name=~\"$service\"}[$__rate_interval])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false
          },
          "unit": "ms"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "id": 8
    },
    {
      "type": "timeseries",
      "title": "Request Rate by Endpoint",
      "description": "HTTP request rate broken down by target host and method",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(http_server_duration_milliseconds_count{service_name=~\"$service\"}[$__rate_interval])) by (http_method, net_host_name)",
          "legendFormat": "{{http_method}} {{net_host_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "bars",
            "lineWidth": 1,
            "fillOpacity": 80,
            "pointSize": 5,
            "showPoints": "never",
            "stacking": { "mode": "normal" }
          },
          "unit": "reqps"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "sum"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 14 },
      "id": 9
    },
    {
      "type": "timeseries",
      "title": "Response Time by Endpoint",
      "description": "p95 response time per target host",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_duration_milliseconds_bucket{service_name=~\"$service\"}[$__rate_interval])) by (le, net_host_name))",
          "legendFormat": "{{net_host_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false
          },
          "unit": "ms"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 14 },
      "id": 10
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 22 },
      "id": 102,
      "title": "Commands",
      "type": "row"
    },
    {
      "type": "timeseries",
      "title": "Command Rate by Name",
      "description": "Commands processed per second, by command name",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(lazyapps_commands_total{service_name=~\"$service\"}[$__rate_interval])) by (command_name)",
          "legendFormat": "{{command_name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none" }
          },
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "sum"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "gridPos": { "h": 8, "w": 14, "x": 0, "y": 23 },
      "id": 11
    },
    {
      "type": "piechart",
      "title": "Command Status",
      "description": "Success vs error ratio for commands",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(increase(lazyapps_commands_total{service_name=~\"$service\"}[$__range])) by (status)",
          "legendFormat": "{{status}}",
          "refId": "A",
          "instant": true
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "success" },
            "properties": [{ "id": "color", "value": { "fixedColor": "green", "mode": "fixed" } }]
          },
          {
            "matcher": { "id": "byName", "options": "error" },
            "properties": [{ "id": "color", "value": { "fixedColor": "red", "mode": "fixed" } }]
          }
        ]
      },
      "options": {
        "reduceOptions": { "calcs": ["sum"], "fields": "", "values": false },
        "legend": { "displayMode": "table", "placement": "right", "values": ["value", "percent"] },
        "pieType": "donut",
        "tooltip": { "mode": "single" }
      },
      "gridPos": { "h": 8, "w": 10, "x": 14, "y": 23 },
      "id": 12
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 31 },
      "id": 103,
      "title": "Event Projections",
      "type": "row"
    },
    {
      "type": "timeseries",
      "title": "Projection Rate by Event Type",
      "description": "Read model projections per second",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "sum(rate(lazyapps_projections_total{service_name=~\"$service\"}[$__rate_interval])) by (event_type)",
          "legendFormat": "{{event_type}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 15,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false,
            "stacking": { "mode": "none" }
          },
          "unit": "ops"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "sum"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 32 },
      "id": 13
    },
    {
      "type": "timeseries",
      "title": "Projection Duration",
      "description": "Read model projection duration percentiles (p50, p90, p99)",
      "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
      "targets": [
        {
          "expr": "histogram_quantile(0.5, sum(rate(lazyapps_projections_duration_ms_milliseconds_bucket{service_name=~\"$service\"}[$__rate_interval])) by (le))",
          "legendFormat": "p50",
          "refId": "A"
        },
        {
          "expr": "histogram_quantile(0.9, sum(rate(lazyapps_projections_duration_ms_milliseconds_bucket{service_name=~\"$service\"}[$__rate_interval])) by (le))",
          "legendFormat": "p90",
          "refId": "B"
        },
        {
          "expr": "histogram_quantile(0.99, sum(rate(lazyapps_projections_duration_ms_milliseconds_bucket{service_name=~\"$service\"}[$__rate_interval])) by (le))",
          "legendFormat": "p99",
          "refId": "C"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "color": { "mode": "palette-classic" },
          "custom": {
            "drawStyle": "line",
            "lineWidth": 2,
            "fillOpacity": 10,
            "pointSize": 5,
            "showPoints": "auto",
            "spanNulls": false
          },
          "unit": "ms"
        },
        "overrides": []
      },
      "options": {
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] },
        "tooltip": { "mode": "multi", "sort": "desc" }
      },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 32 },
      "id": 14
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 40 },
      "id": 104,
      "title": "Logs",
      "type": "row"
    },
    {
      "type": "logs",
      "title": "Application Logs",
      "description": "Structured logs from all services via Loki",
      "datasource": { "type": "loki", "uid": "${DS_LOKI}" },
      "targets": [
        {
          "expr": "{service_name=~\"$service\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      },
      "gridPos": { "h": 12, "w": 24, "x": 0, "y": 41 },
      "id": 15
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 53 },
      "id": 105,
      "title": "Traces",
      "type": "row"
    },
    {
      "type": "table",
      "title": "Recent Traces",
      "description": "Recent traces from Tempo â€” click a Trace ID to explore",
      "datasource": { "type": "tempo", "uid": "${DS_TEMPO}" },
      "targets": [
        {
          "queryType": "traceql",
          "query": "{ status = error } || { duration > 100ms } || { true }",
          "limit": 20,
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "showHeader": true,
        "cellHeight": "sm",
        "footer": { "show": false }
      },
      "gridPos": { "h": 10, "w": 24, "x": 0, "y": 54 },
      "id": 16
    }
  ],
  "schemaVersion": 39,
  "tags": ["lazyapps", "opentelemetry", "otel"],
  "templating": {
    "list": [
      {
        "current": {},
        "datasource": { "type": "prometheus", "uid": "${DS_PROMETHEUS}" },
        "definition": "label_values(target_info, service_name)",
        "includeAll": true,
        "multi": true,
        "name": "service",
        "label": "Service",
        "query": { "query": "label_values(target_info, service_name)", "refId": "StandardVariableQuery" },
        "refresh": 2,
        "regex": "/^(?!otelcol).*/",
        "sort": 1,
        "type": "query"
      }
    ]
  },
  "time": { "from": "now-3h", "to": "now" },
  "timepicker": {
    "refresh_intervals": ["5s", "10s", "30s", "1m", "5m"]
  },
  "timezone": "browser",
  "title": "LazyApps Observability",
  "uid": null,
  "version": 0
}
