    "cross-env": "^7.0.3",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-svelte": "^2.32.4",
    "npm-run-all2": "^6.2.3",
    "prettier": "^3.0.1",
    "prettier-plugin-svelte": "^3.0.3",
    "vitest": "^2.1.8"
  },
  "dependencies": {
    "@lazyapps/aggregatestore-inmemory": "^0.1.2",
    "@lazyapps/bootstrap": "^0.2.0",
    "@lazyapps/change-notification-sender-fetch": "^0.1.2",
    "@lazyapps/change-notifier-socket-io": "^0.1.3",
    "@lazyapps/eventbus-mqemitter-redis": "^0.1.2",
    "@lazyapps/eventstore-mongodb": "^0.1.3",
    "@lazyapps/express": "^0.1.4",
    "@lazyapps/logger": "^0.2.0",
    "@lazyapps/mqemitter": "^0.2.0",
    "@lazyapps/observability": "^0.3.0",
    "@lazyapps/readmodelstorage-mongodb": "^0.1.2",
    "@sveltejs/adapter-auto": "^2.1.0",
    "@sveltejs/kit": "^1.22.4",
    "@sveltejs/vite-plugin-svelte": "^2.4.4",
    "mqemitter": "^5.0.0",
    "nanoid": "^4.0.2",
    "semver": "^7.6.3",
    "socket.io-client": "^4.7.2",
    "svelte": "^4.1.2",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "yup": "^1.2.0"
  },
